<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Distance</th>
      <th>Ville</th>
      <th>Date</th>
      <th>Description</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.nom %></td>
        <td><%= course.distance %></td>
        <td><%= course.ville %></td>
        <td><%= course.date %></td>
        <td><%= course.description %></td>
        <td><%= course.url %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Inscription', course %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

